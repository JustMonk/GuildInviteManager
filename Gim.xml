<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
   <Frame name="FrameTestFrame" enableMouse="true" movable="true">
      <Scripts>
         <OnLoad function="Addon_OnLoad"></OnLoad>
         <OnDragStart>self:StartMoving();</OnDragStart>
         <OnDragStop>self:StopMovingOrSizing();</OnDragStop>
      </Scripts>
      <Size>
         <AbsDimension x="400" y="450" />
      </Size>
      <Anchors>
         <Anchor point="CENTER" />
      </Anchors>
      <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
         <BackgroundInsets>
            <AbsInset left="11" right="12" top="12" bottom="11" />
         </BackgroundInsets>
         <TileSize>
            <AbsValue val="32" />
         </TileSize>
         <EdgeSize>
            <AbsValue val="32" />
         </EdgeSize>
      </Backdrop>
      <Layers>
         <Layer level="BACKGROUND">
            <Texture setAllPoints="true">
               <Color r="0.4" g="0.4" b="0.4" a="0.3" />
            </Texture>
         </Layer>

         <Layer>
            <FontString name="$parentSettingTitle" inherits="GameFontHighlight" text="Guild invite manager (0.2)" justifyH="LEFT" justifyV="TOP">
               <Anchors>
                  <Anchor point="TOP" x="0" y="-12" />
                  <Anchor point="LEFTCENTER" relativeTo="$parent" x="0" y="0" />
               </Anchors>
            </FontString>
         </Layer>
      </Layers>
   </Frame>

   <Button inherits="UIPanelButtonTemplate" text="toggle frame">
      <Size x="80" y="22" />
      <Scripts>
         <OnClick function="ToggleSetting"></OnClick>
      </Scripts>
      <Anchors>
         <Anchor point="TOP" />
      </Anchors>
      <NormalFont style="GameFontNormal" />
   </Button>

   <!-- top controls -->
   <Button inherits="UIPanelCloseButton" parent="FrameTestFrame">
      <Size x="30" y="30" />
      <Scripts>
         <OnClick function="ToggleSetting" />
      </Scripts>
      <Anchors>
         <Anchor point="TOP">
            <Offset x="0" y="-5" />
         </Anchor>
         <Anchor point="RIGHT">
            <Offset x="-5" y="0" />
         </Anchor>
      </Anchors>
      <NormalFont style="GameFontNormal" />
   </Button>

   <!-- bottom controls -->
   <Button inherits="UIPanelButtonTemplate" text="Print" parent="FrameTestFrame">
      <Size x="70" y="30" />
      <Scripts>
         <OnClick function="printSlashCommand" />
      </Scripts>
      <Anchors>
         <Anchor point="LEFT">
            <Offset x="15" y="1" />
         </Anchor>
         <Anchor point="BOTTOM">
            <Offset x="1" y="10" />
         </Anchor>
      </Anchors>
      <NormalFont style="GameFontNormalHuge" />
   </Button>

   <Button inherits="UIPanelButtonTemplate" text="Who upd" parent="FrameTestFrame">
      <Size x="70" y="30" />
      <Scripts>
         <OnClick function="updateWho" />
      </Scripts>
      <Anchors>
         <Anchor point="LEFT">
            <Offset x="90" y="1" />
         </Anchor>
         <Anchor point="BOTTOM">
            <Offset x="1" y="10" />
         </Anchor>
      </Anchors>
      <NormalFont style="GameFontNormal" />
   </Button>

   <Button inherits="UIPanelButtonTemplate" text="Create table" parent="FrameTestFrame">
      <Size x="70" y="30" />
      <Scripts>
         <OnClick function="createPlayerTable" />
      </Scripts>
      <Anchors>
         <Anchor point="LEFT">
            <Offset x="165" y="1" />
         </Anchor>
         <Anchor point="BOTTOM">
            <Offset x="1" y="10" />
         </Anchor>
      </Anchors>
      <NormalFont style="GameFontNormal" />
   </Button>

   <Button inherits="UIPanelButtonTemplate" text="Test frame" parent="FrameTestFrame">
      <Size x="70" y="30" />
      <Scripts>
         <OnClick function="testFrame" />
      </Scripts>
      <Anchors>
         <Anchor point="LEFT">
            <Offset x="240" y="1" />
         </Anchor>
         <Anchor point="BOTTOM">
            <Offset x="1" y="10" />
         </Anchor>
      </Anchors>
      <NormalFont style="GameFontNormal" />
   </Button>

   <Button inherits="UIPanelButtonTemplate" text="Datagrid upd" parent="FrameTestFrame">
      <Size x="70" y="30" />
      <Scripts>
         <OnClick function="updateDatagrid" />
      </Scripts>
      <Anchors>
         <Anchor point="LEFT">
            <Offset x="315" y="1" />
         </Anchor>
         <Anchor point="BOTTOM">
            <Offset x="1" y="10" />
         </Anchor>
      </Anchors>
      <NormalFont style="GameFontNormal" />
   </Button>

